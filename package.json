{
  "name": "simorgh",
  "version": "0.0.1",
  "description": "Simorgh",
  "main": "index.js",
  "scripts": {
    "dev": "razzle start",
    "build": "razzle build",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "eslint --ext .js,jsx ./src",
    "test:unit": "razzle test --env=jsdom",
    "start": "NODE_ENV=production node build/server.js",
    "speculate": "speculate",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "test:e2e": "npx cypress run",
    "test:e2e:interactive": "npx cypress open",
    "test:storybook": "CYPRESS_baseUrl=http://localhost:9001 npm run test:e2e -- --spec cypress/integration/storybook_spec.js",
    "test:storybook:interactive": "CYPRESS_baseUrl=http://localhost:9001 npm run test:e2e:interactive"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbc/simorgh.git"
  },
  "keywords": [
    "BBC",
    "Article"
  ],
  "author": "BBC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bbc/simorgh/issues"
  },
  "homepage": "https://github.com/bbc/simorgh#readme",
  "dependencies": {
    "@jaredpalmer/after": "^1.3.1",
    "babel-eslint": "^8.2.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "express": "^4.16.3",
    "prop-types": "^15.6.1",
    "prettier": "1.13.4",
    "razzle": "^2.0.0-alpha.12",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-helmet": "^5.2.0",
    "react-router-dom": "^4.2.2",
    "speculate": "^1.7.4"
  },
  "devDependencies": {
    "@storybook/react": "^4.0.0-alpha.8",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!./build/**",
      "!./node_modules/**"
    ],
    "setupFiles": [
      "./src/__test__/enzyme-setup.js"
    ]
  }
}
